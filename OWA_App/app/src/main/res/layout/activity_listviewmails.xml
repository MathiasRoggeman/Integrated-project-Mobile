<?xml version="1.0" encoding="utf-8"?>
<!--  Single List Item Design -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="6dip">


    <ImageView
        android:id="@+id/person_circle"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/circle" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/subject"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/person_circle"
        android:singleLine="true"
        android:layout_gravity="center"
        android:layout_centerInParent="false"
        android:lines="1"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/sender"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/subject"
        android:layout_below="@+id/subject"
        android:singleLine="true"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/body"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/subject"
        android:layout_below="@+id/sender"
        android:singleLine="true"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/person_circle_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/person_circle"
        android:layout_alignLeft="@+id/person_circle"
        android:layout_alignRight="@+id/person_circle"
        android:layout_alignTop="@+id/person_circle"
        android:layout_centerHorizontal="false"
        android:layout_centerInParent="true"
        android:layout_centerVertical="false"
        android:layout_toStartOf="@+id/subject"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textSize="20sp" />

